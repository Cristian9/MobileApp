<?xml version='1.0' encoding='utf-8'?>
<widget id="com.utp.preguntados" version="0.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SpinnerPlugin">
        <param name="android-package" value="it.mobimentum.phonegapspinnerplugin.SpinnerPlugin" />
    </feature>
    <feature name="PushNotification">
        <param name="android-package" value="com.adobe.phonegap.push.PushPlugin" />
    </feature>
    <feature name="SQLitePlugin">
        <param name="android-package" value="io.sqlc.SQLitePlugin" />
    </feature>
    <feature name="Notification">
        <param name="android-package" value="org.apache.cordova.dialogs.Notification" />
    </feature>
    <feature name="File">
        <param name="android-package" value="org.apache.cordova.file.FileUtils" />
        <param name="onload" value="true" />
    </feature>
    <allow-navigation href="cdvfile:*" />
    <feature name="Media">
        <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
    </feature>
    <feature name="UniversalAnalytics">
        <param name="android-package" value="com.danielcwilson.plugins.analytics.UniversalAnalyticsPlugin" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <allow-intent href="market:*" />
    <icon density="ldpi" src="resources/android/ldpi.png" />
    <icon density="mdpi" src="resources/android/mdpi.png" />
    <icon density="hdpi" src="resources/android/hdpi.png" />
    <icon density="xhdpi" src="resources/android/xhdpi.png" />
    <preference name="Orientation" value="portrait" />
    <name>Desaf√≠o UTP</name>
    <description>
        Pon a prueba tus conocimientos desafiando a tus amigos.
    </description>
    <author email="ctjquery@gmail.com" href="http://cordova.io">
        Cristian Tapia - DTA UTP
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
