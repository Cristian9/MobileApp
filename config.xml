<?xml version='1.0' encoding='utf-8'?>
<widget id="com.utp.preguntados" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Desaf√≠o UTP</name>
    <description>
        Pon a prueba tus conocimientos desafiando a tus amigos.
    </description>
    <author email="ctjquery@gmail.com" href="http://cordova.io">
        Cristian Tapia - DTA UTP
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="resources/android/ldpi.png" density="ldpi" />
        <preference name="Orientation" value="portrait" />
        <feature name="Media">
            <param name="android-package" value="org.apache.cordova.media.AudioHandler" />
        </feature>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>